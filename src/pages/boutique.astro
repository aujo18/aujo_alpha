---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Contact from '../components/Contact.astro';
import Shop from '../components/Shop.astro';

// Configuration
const title = "Aujo | Boutique";
const description = "Boutique officielle d'Aujo. Achetez des albums, des merchandising et d'autres produits exclusifs.";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteUrl = Astro.url.origin;
---

<!-- Chargement officiel de Snipcart -->
<script src="https://cdn.snipcart.com/themes/v3.3.1/default/snipcart.js" defer></script>
<link rel="stylesheet" href="https://cdn.snipcart.com/themes/v3.3.1/default/snipcart.css" />

<!-- Style ultra-agressif pour s'assurer que le checkout est visible -->
<style is:global>
  /* Z-index extrêmement élevé pour Snipcart */
  #snipcart,
  .snipcart-modal,
  .snipcart-cart,
  .snipcart-checkout-page,
  .snipcart-modal__container {
    z-index: 9999999999 !important; /* Valeur extrêmement élevée */
    position: relative !important;
  }
  
  /* Forcer le menu à rester en dessous du checkout */
  body.snipcart-checkout-visible nav,
  body.snipcart-checkout-visible header {
    visibility: hidden !important;
  }
  
  /* Styles de base */
  .snipcart-add-item, 
  .snipcart-checkout {
    cursor: pointer;
  }
</style>

<Layout title={title} description={description} canonicalURL={canonicalURL.href}>
  <Navigation />
  <main>
    <div class="container mx-auto px-4 py-12">
      <div class="flex justify-between items-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold">Boutique</h1>
        
        <!-- Bouton de panier standard -->
        <button class="snipcart-checkout flex items-center bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded-lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
          <span class="snipcart-items-count mr-2">0</span> articles
        </button>
      </div>
      <Shop siteUrl={siteUrl} />
    </div>
  </main>
  <Contact />
</Layout>

<!-- Conteneur Snipcart -->
<div hidden id="snipcart" data-api-key="MTYzYzM2ODMtZWFlYy00MGJiLThkMDAtM2QzN2YwMGVkYzFiNjM2OTQ0MzAxMDE5OTU2NjQ0"></div>

<!-- Script pour manipuler directement le DOM -->
<script>
  // Observer pour détecter quand le body reçoit la classe snipcart-checkout-visible
  const bodyObserver = new MutationObserver((mutations) => {
    mutations.forEach((mutation) => {
      if (mutation.attributeName === 'class') {
        const body = document.body;
        
        // Vérifier si la classe a été ajoutée
        if (body.classList.contains('snipcart-checkout-visible')) {
          console.log('Checkout visible - hiding navigation');
          
          // Forcer tous les éléments de navigation à se cacher
          document.querySelectorAll('header, nav').forEach(el => {
            el.style.visibility = 'hidden';
          });
        } else {
          console.log('Checkout hidden - showing navigation');
          
          // Réafficher les éléments de navigation
          document.querySelectorAll('header, nav').forEach(el => {
            el.style.visibility = 'visible';
          });
        }
      }
    });
  });

  document.addEventListener('DOMContentLoaded', () => {
    // Observer les changements sur le body
    bodyObserver.observe(document.body, { attributes: true });
    
    // Surveiller les clics sur les boutons
    document.querySelectorAll('.snipcart-add-item, .snipcart-checkout').forEach(button => {
      button.addEventListener('click', function(e) {
        console.log('Button clicked:', this.className);
      });
    });
  });
</script> 