<!-- Ajout de styles personnalisés pour corriger les problèmes de z-index -->
<style is:global>
  /* S'assurer que le conteneur Snipcart est toujours au-dessus de tout */
  .snipcart-checkout-page,
  .snipcart-modal,
  .snipcart-modal__container {
    z-index: 9999 !important;
  }
  
  /* Ajustement pour la navigation fixe */
  header.fixed {
    /* Réduire le z-index pour que Snipcart puisse apparaître par-dessus */
    z-index: 50;
  }
  
  /* Les éléments Snipcart doivent toujours être visibles */
  #snipcart {
    position: relative;
    z-index: 9999 !important;
  }
</style>

<Layout title={title} description={description} canonicalURL={canonicalURL.href}>
  <Navigation />
  <main>
    <div class="container mx-auto px-4 py-12">
      <div class="flex justify-between items-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold">Boutique</h1>
        <button class="snipcart-checkout flex items-center bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded-lg transition">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
          <span class="flex items-center">
            <span class="snipcart-items-count mr-2">0</span>
            articles - 
            <span class="snipcart-total-price ml-2">0,00 €</span>
          </span>
        </button>
      </div>
      <Shop />
    </div>
  </main>
  <Contact />
  
  <!-- Div Snipcart pour le crawling -->
  <div hidden id="snipcart-product-templates">
    <div id="snipcart-template-album-premier" data-item-id="album-premier">
      <h2>Premier Album</h2>
      <p>Album physique avec livret de paroles</p>
      <p>15.99 €</p>
    </div>
    
    <div id="snipcart-template-t-shirt-tour" data-item-id="t-shirt-tour">
      <h2>T-shirt Tournée</h2>
      <p>T-shirt officiel de la tournée 2023</p>
      <p>24.99 €</p>
    </div>
    
    <div id="snipcart-template-tote-bag" data-item-id="tote-bag">
      <h2>Tote Bag</h2>
      <p>Sac en toile avec design exclusif</p>
      <p>12.99 €</p>
    </div>
    
    <div id="snipcart-template-poster-signature" data-item-id="poster-signature">
      <h2>Poster dédicacé</h2>
      <p>Poster A3 avec signature authentique</p>
      <p>19.99 €</p>
    </div>
  </div>
</Layout>

<!-- Conteneur Snipcart -->
<div id="snipcart" hidden data-api-key="MTYzYzM2ODMtZWFlYy00MGJiLThkMDAtM2QzN2YwMGVkYzFiNjM2OTQ0MzAxMDE5OTU2NjQ0" data-config-modal-style="full-page"></div>

<script>
  // Débogage amélioré
  document.addEventListener('DOMContentLoaded', () => {
    console.log('DOM fully loaded');
    
    // Vérifier si Snipcart existe dans la fenêtre
    setTimeout(() => {
      if (window.Snipcart) {
        console.log('Snipcart object found in window');
      } else {
        console.error('Snipcart object NOT found in window');
      }
    }, 2000);
    
    // Ajouter des listeners aux boutons
    document.querySelectorAll('.snipcart-add-item').forEach(button => {
      console.log('Found button:', button.getAttribute('data-item-name'));
      
      button.addEventListener('click', (e) => {
        e.preventDefault(); // Empêcher le comportement par défaut
        console.log('Button clicked:', button.getAttribute('data-item-name'));
        
        // Vérifier si Snipcart API est prête
        if (window.Snipcart) {
          // Ajouter manuellement au panier
          window.Snipcart.api.cart.items.add({
            id: button.getAttribute('data-item-id'),
            name: button.getAttribute('data-item-name'),
            price: parseFloat(button.getAttribute('data-item-price')),
            url: button.getAttribute('data-item-url') || window.location.href,
            description: button.getAttribute('data-item-description')
          }).then(() => {
            console.log('Item added via API');
          }).catch(error => {
            console.error('Error adding item via API:', error);
          });
        } else {
          console.error('Snipcart API not available');
        }
      });
    });
  });
  
  // Écouter l'événement ready de Snipcart
  document.addEventListener('snipcart.ready', () => {
    console.log('Snipcart ready event fired!');
    
    // Vérifier si l'API est accessible
    if (window.Snipcart && window.Snipcart.api) {
      console.log('Snipcart API is available');
    }
  });
</script> 