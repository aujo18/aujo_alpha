---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Contact from '../components/Contact.astro';
import Shop from '../components/Shop.astro';

// Définir les produits ici aussi pour pouvoir les utiliser dans la div de crawling
const products = [
  {
    id: "album-premier",
    name: "Premier Album",
    price: 15.99,
    description: "Album physique avec livret de paroles",
    image: "/images/album-cover.jpg"
  },
  {
    id: "t-shirt-tour",
    name: "T-shirt Tournée",
    price: 24.99,
    description: "T-shirt officiel de la tournée 2023",
    image: "/images/tshirt.jpg"
  },
  {
    id: "tote-bag",
    name: "Tote Bag",
    price: 12.99,
    description: "Sac en toile avec design exclusif",
    image: "/images/totebag.jpg"
  },
  {
    id: "poster-signature",
    name: "Poster dédicacé",
    price: 19.99,
    description: "Poster A3 avec signature authentique",
    image: "/images/poster.jpg"
  }
];

const title = "Aujo | Boutique";
const description = "Boutique officielle d'Aujo. Achetez des albums, des merchandising et d'autres produits exclusifs.";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!-- Ajouter cette balise script en haut, avant Layout -->
<script>
  window.SnipcartSettings = {
    publicApiKey: "MTYzYzM2ODMtZWFlYy00MGJiLThkMDAtM2QzN2YwMGVkYzFiNjM2OTQ0MzAxMDE5OTU2NjQ0"
  };

  // Chargement standard de Snipcart
  (function(){var c,d;(d=(c=window.SnipcartSettings).version)!=null||(c.version="3.0");var s,S;(S=(s=window.SnipcartSettings).currency)!=null||(s.currency="eur");var l,p;(p=(l=window.SnipcartSettings).domain)!=null||(l.domain="cdn.snipcart.com");var w,u;(u=(w=window.SnipcartSettings).protocol)!=null||(w.protocol="https");var f=window.document.getElementsByTagName("script")[0],h=window.document.createElement("script");h.src="https://cdn.snipcart.com/themes/v"+window.SnipcartSettings.version+"/default/snipcart.js";h.async=true;f.parentNode.insertBefore(h,f);window.document.createElement("div").innerHTML="<style>.snipcart-modal__container{z-index:10000000}.snipcart-cart-button{z-index:99999}.snipcart *{font-family:sans-serif}</style>";})();
</script>
<link rel="preconnect" href="https://app.snipcart.com">
<link rel="preconnect" href="https://cdn.snipcart.com">
<link rel="stylesheet" href="https://cdn.snipcart.com/themes/v3.0/default/snipcart.css" />

<!-- Après le script Snipcart mais avant le Layout -->
<style is:global>
  /* Augmenter le z-index des éléments Snipcart pour qu'ils soient au-dessus de tout */
  .snipcart-modal,
  .snipcart-checkout-page,
  .snipcart-cart,
  .snipcart-modal__container,
  #snipcart-checkout-step-billing,
  #snipcart {
    z-index: 9999999 !important;
  }
  
  /* Réduire légèrement le z-index de la navigation pour permettre à Snipcart d'apparaître par-dessus */
  header.fixed {
    z-index: 40 !important;
  }
  
  /* Style de base pour le conteneur modal de Snipcart */
  .snipcart-modal__container {
    position: relative;
    z-index: 9999999 !important;
  }
  
  /* S'assurer que le corps du document ne bloque pas le modal */
  body.snipcart-checkout-visible,
  body.snipcart-sidecart--opened {
    overflow: hidden;
  }
</style>

<Layout title={title} description={description} canonicalURL={canonicalURL.href}>
  <Navigation />
  <main>
    <div class="container mx-auto px-4 py-12">
      <div class="flex justify-between items-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold">Boutique</h1>
        <button class="snipcart-checkout flex items-center bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded-lg transition">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
          <span class="flex items-center">
            <span class="snipcart-items-count mr-2">0</span>
            article(s) -
            <span class="ml-2">
              <span class="snipcart-total-price">0,00 €</span>
            </span>
          </span>
        </button>
      </div>
      <Shop />
    </div>
  </main>
  <Contact />
  
  <!-- Div Snipcart pour le crawling -->
  <div hidden id="snipcart-product-templates">
    <div id="snipcart-template-album-premier" data-item-id="album-premier">
      <h2>Premier Album</h2>
      <p>Album physique avec livret de paroles</p>
      <p>15.99 €</p>
    </div>
    
    <div id="snipcart-template-t-shirt-tour" data-item-id="t-shirt-tour">
      <h2>T-shirt Tournée</h2>
      <p>T-shirt officiel de la tournée 2023</p>
      <p>24.99 €</p>
    </div>
    
    <div id="snipcart-template-tote-bag" data-item-id="tote-bag">
      <h2>Tote Bag</h2>
      <p>Sac en toile avec design exclusif</p>
      <p>12.99 €</p>
    </div>
    
    <div id="snipcart-template-poster-signature" data-item-id="poster-signature">
      <h2>Poster dédicacé</h2>
      <p>Poster A3 avec signature authentique</p>
      <p>19.99 €</p>
    </div>
  </div>
</Layout>

<!-- Div Snipcart simplifié -->
<div id="snipcart" hidden data-api-key="MTYzYzM2ODMtZWFlYy00MGJiLThkMDAtM2QzN2YwMGVkYzFiNjM2OTQ0MzAxMDE5OTU2NjQ0" data-config-modal-style="side"></div>

<script>
  // Minimal debugging
  document.addEventListener('DOMContentLoaded', () => {
    console.log('DOM fully loaded');
    
    // Simple click logger
    document.querySelectorAll('.snipcart-add-item').forEach(button => {
      console.log(`Found button: ${button.getAttribute('data-item-name')}`);
    });
  });
</script>

<div class="mt-8 p-4 bg-gray-100 rounded-lg">
  <h2 class="text-2xl mb-4">Test Bouton</h2>
  <button
    class="snipcart-add-item bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded-lg"
    data-item-id="test-item"
    data-item-name="Article Test"
    data-item-price="9.99"
    data-item-url="https://votredomaine.com/boutique" 
    data-item-description="Ceci est un article de test"
  >
    TESTER SNIPCART
  </button>
</div> 