---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Contact from '../components/Contact.astro';
import Shop from '../components/Shop.astro';

// Configuration
const title = "Aujo | Boutique";
const description = "Boutique officielle d'Aujo. Achetez des albums, des merchandising et d'autres produits exclusifs.";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteUrl = Astro.url.origin;
---

<!-- Chargement officiel de Snipcart -->
<script src="https://cdn.snipcart.com/themes/v3.3.1/default/snipcart.js" defer></script>
<link rel="stylesheet" href="https://cdn.snipcart.com/themes/v3.3.1/default/snipcart.css" />

<!-- Style minimaliste pour s'assurer que le checkout est visible -->
<style is:global>
  /* Z-index pour Snipcart */
  #snipcart,
  .snipcart-modal,
  .snipcart-cart,
  .snipcart-checkout-page {
    z-index: 10000000 !important;
  }
  
  /* Style pour le header lorsque Snipcart est ouvert */
  header.snipcart-is-open {
    display: none !important;
  }
  
  /* Style pour le header normal */
  header.fixed {
    z-index: 50 !important;
  }
  
  /* Boutons cliquables */
  .snipcart-add-item, 
  .snipcart-checkout {
    cursor: pointer;
  }
</style>

<Layout title={title} description={description} canonicalURL={canonicalURL.href}>
  <Navigation />
  <main>
    <div class="container mx-auto px-4 py-12">
      <div class="flex justify-between items-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold">Boutique</h1>
        
        <!-- Bouton de panier standard -->
        <button class="snipcart-checkout flex items-center bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded-lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
          <span class="snipcart-items-count mr-2">0</span> articles
        </button>
      </div>
      <Shop siteUrl={siteUrl} />
    </div>
  </main>
  <Contact />
</Layout>

<!-- Conteneur Snipcart -->
<div hidden id="snipcart" data-api-key="MTYzYzM2ODMtZWFlYy00MGJiLThkMDAtM2QzN2YwMGVkYzFiNjM2OTQ0MzAxMDE5OTU2NjQ0"></div>

<!-- Script pour masquer le header lorsque Snipcart est ouvert -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Surveiller quand Snipcart est prêt
    document.addEventListener('snipcart.ready', () => {
      console.log('Snipcart is ready');
      
      // Masquer le header quand le panier s'ouvre
      document.addEventListener('snipcart.show', () => {
        console.log('Snipcart opened - hiding header');
        document.querySelector('header')?.classList.add('snipcart-is-open');
      });
      
      // Réafficher le header quand le panier se ferme
      document.addEventListener('snipcart.close', () => {
        console.log('Snipcart closed - showing header');
        document.querySelector('header')?.classList.remove('snipcart-is-open');
      });
    });
    
    // Surveillez les clics sur les boutons pour déboguer
    document.querySelectorAll('.snipcart-add-item, .snipcart-checkout').forEach(button => {
      button.addEventListener('click', function(e) {
        console.log('Button clicked:', this.className);
      });
    });
  });
</script> 