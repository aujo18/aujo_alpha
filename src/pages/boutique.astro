---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Contact from '../components/Contact.astro';
import Shop from '../components/Shop.astro';

// Définir les produits ici aussi pour pouvoir les utiliser dans la div de crawling
const products = [
  {
    id: "album-premier",
    name: "Premier Album",
    price: 15.99,
    description: "Album physique avec livret de paroles",
    image: "/images/album-cover.jpg"
  },
  {
    id: "t-shirt-tour",
    name: "T-shirt Tournée",
    price: 24.99,
    description: "T-shirt officiel de la tournée 2023",
    image: "/images/tshirt.jpg"
  },
  {
    id: "tote-bag",
    name: "Tote Bag",
    price: 12.99,
    description: "Sac en toile avec design exclusif",
    image: "/images/totebag.jpg"
  },
  {
    id: "poster-signature",
    name: "Poster dédicacé",
    price: 19.99,
    description: "Poster A3 avec signature authentique",
    image: "/images/poster.jpg"
  }
];

const title = "Aujo | Boutique";
const description = "Boutique officielle d'Aujo. Achetez des albums, des merchandising et d'autres produits exclusifs.";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!-- Configuration Snipcart selon méthode officielle -->
<script is:inline>
  window.SnipcartSettings = {
    publicApiKey: "MTYzYzM2ODMtZWFlYy00MGJiLThkMDAtM2QzN2YwMGVkYzFiNjM2OTQ0MzAxMDE5OTU2NjQ0",
    loadStrategy: "on-user-interaction",
    modalStyle: "side",
  };

  (function() {
    var c, d;
    (d = (c = window.SnipcartSettings).domain) != null || (c.domain = window.location.origin);
    var s = document.createElement('script');
    s.src = 'https://cdn.snipcart.com/themes/v3.2.2/default/snipcart.js';
    s.async = true;
    document.body.appendChild(s);
  })();
</script>
<link rel="stylesheet" href="https://cdn.snipcart.com/themes/v3.2.2/default/snipcart.css" />

<Layout title={title} description={description} canonicalURL={canonicalURL.href}>
  <Navigation />
  <main>
    <div class="container mx-auto px-4 py-12">
      <h1 class="text-4xl md:text-5xl font-bold text-center mb-12">Boutique</h1>
      <Shop />
    </div>
  </main>
  <Contact />
  
  <!-- Div Snipcart pour le crawling -->
  <div hidden id="snipcart-product-templates">
    <div id="snipcart-template-album-premier" data-item-id="album-premier">
      <h2>Premier Album</h2>
      <p>Album physique avec livret de paroles</p>
      <p>15.99 €</p>
    </div>
    
    <div id="snipcart-template-t-shirt-tour" data-item-id="t-shirt-tour">
      <h2>T-shirt Tournée</h2>
      <p>T-shirt officiel de la tournée 2023</p>
      <p>24.99 €</p>
    </div>
    
    <div id="snipcart-template-tote-bag" data-item-id="tote-bag">
      <h2>Tote Bag</h2>
      <p>Sac en toile avec design exclusif</p>
      <p>12.99 €</p>
    </div>
    
    <div id="snipcart-template-poster-signature" data-item-id="poster-signature">
      <h2>Poster dédicacé</h2>
      <p>Poster A3 avec signature authentique</p>
      <p>19.99 €</p>
    </div>
  </div>
</Layout>

<!-- Conteneur Snipcart -->
<div hidden id="snipcart" data-config-modal-style="side"></div>

<script>
  // Débogage des clics sur les boutons
  document.addEventListener('DOMContentLoaded', () => {
    console.log('DOM fully loaded');
    
    document.querySelectorAll('.snipcart-add-item').forEach(button => {
      button.addEventListener('click', (e) => {
        console.log('Button clicked:', e.currentTarget.getAttribute('data-item-name'));
      });
    });
  });
  
  document.addEventListener('snipcart.ready', () => {
    console.log('Snipcart ready!');
  });
</script> 