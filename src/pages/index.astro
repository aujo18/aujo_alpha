---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import Bio from '../components/Bio.astro';
import Music from '../components/Music.astro';
import Concerts from '../components/Concerts.astro';
import Contact from '../components/Contact.astro';
import PromoModal from '../components/PromoModal.astro';
import { translations } from '../i18n/index.js';

const locale = 'en';
const t = translations[locale];

const title = t.meta.title;
const description = t.meta.description;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<Layout title={title} description={description} canonicalURL={canonicalURL.href} locale={locale}>
  <Navigation locale={locale} />
  <main>
    <Hero locale={locale} />
    <Bio locale={locale} />
    <Music locale={locale} />
    <Concerts locale={locale} />
    <Contact locale={locale} />
    <PromoModal locale={locale} />
  </main>
</Layout>