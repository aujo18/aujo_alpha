---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import Bio from '../components/Bio.astro';
import Music from '../components/Music.astro';
import Concerts from '../components/Concerts.astro';
import Contact from '../components/Contact.astro';

const title = "Aujo | Auteure - Compositrice - Interprète";
const description = "Découvrez Aujo, auteure-compositrice-interprète. Explorez sa musique, ses paroles et ses spectacles à venir.";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<Layout title={title} description={description} canonicalURL={canonicalURL.href}>
  <Navigation />
  <main>
    <Hero />
    <Bio />
    <Music />
    <Concerts />
    <Contact />
  </main>
</Layout>