---
const links = [
  { href: "#accueil", text: "Accueil" },
  { href: "#musique", text: "Musique" },
  { href: "#concerts", text: "Concerts" },
  { href: "#contact", text: "Contact" },
];
---

<header class="fixed w-full bg-white/80 backdrop-blur-sm z-50 border-b border-neutral-100">
  <nav class="container mx-auto px-6 py-4">
    <ul class="flex justify-center space-x-8">
      {
        links.map((link) => (
          <li>
            <a
              href={link.href}
              class="text-link hover:underline"
            >
              {link.text}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>