---
import { albums } from '../data/albums';
---

<section id="musique" class="py-20 bg-white">
  <div class="container mx-auto px-6">
    <h2 class="font-playfair text-4xl md:text-5xl text-center mb-16 text-neutral-900">Ma Musique</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {albums.map(album => (
        <div class="bg-neutral-50 p-6 rounded-lg border border-neutral-200">
          <img
            src={album.coverImage}
            alt={`Album Cover - ${album.title}`}
            class="w-full aspect-square object-cover rounded-lg mb-6"
          />
          <div class="flex justify-center gap-4">
            <a
              href={album.spotifyUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="px-6 py-2 bg-emerald-600 text-white rounded hover:bg-emerald-700 transition-colors duration-300 inline-flex items-center gap-2"
            >
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
              </svg>
              Ã‰couter
            </a>
            <a
              href={`/lyrics/${album.id}`}
              class="px-6 py-2 bg-white text-emerald-600 rounded border border-emerald-600 hover:bg-emerald-50 transition-colors duration-300"
            >
              Lyrics
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>