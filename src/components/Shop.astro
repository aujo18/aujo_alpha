---
// Accepter siteUrl en tant que propriété
const { siteUrl } = Astro.props;
const products = [
  {
    id: "album-premier",
    name: "Album Aujo",
    price: 25.00,
    description: "Album physique avec livret de paroles",
    image: "https://res.cloudinary.com/dxyvj8rka/image/upload/f_auto,q_auto/v1/Aujo/a7ith5ihfedughm7txyc"
  },
  {
    id: "t-shirt-tour",
    name: "T-shirt Tournée",
    price: 24.99,
    description: "T-shirt officiel de la tournée 2023",
    image: "/images/tshirt.jpg"
  },
  {
    id: "tote-bag",
    name: "Tote Bag",
    price: 12.99,
    description: "Sac en toile avec design exclusif",
    image: "/images/totebag.jpg"
  },
  {
    id: "poster-signature",
    name: "Poster dédicacé",
    price: 19.99,
    description: "Poster A3 avec signature authentique",
    image: "/images/poster.jpg"
  }
];

// Configuration de base
const baseUrl = import.meta.env.PROD 
  ? "https://www.aujo.ca/boutique" 
  : "http://localhost:3000/boutique";
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
  <!-- Premier Album -->
  <div class="border rounded-lg overflow-hidden shadow-lg">
    <div class="h-64 bg-gray-200 flex items-center justify-center">
      <img src={products[0].image} alt={products[0].name} class="object-cover h-full w-full" />
    </div>
    <div class="p-6">
      <h3 class="text-xl font-semibold mb-2">{products[0].name}</h3>
      <p class="text-gray-700 mb-4">{products[0].description}</p>
      <div class="flex justify-between items-center">
        <span class="text-xl font-bold">{products[0].price.toFixed(2)} $</span>
        <button
          class="snipcart-add-item bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded-lg"
          data-item-id={products[0].id}
          data-item-name={products[0].name}
          data-item-price={products[0].price}
          data-item-url={siteUrl}
          data-item-image={products[0].image}
        >
          Ajouter au panier
        </button>
      </div>
    </div>
  </div>

  <!-- T-shirt Tournée -->
  <div class="border rounded-lg overflow-hidden shadow-lg">
    <div class="h-64 bg-gray-200 flex items-center justify-center">
      <img 
        src="/images/tshirt.jpg" 
        alt="T-shirt Tournée"
        class="object-cover h-full w-full"
        onerror="this.src='/images/placeholder.jpg'; this.onerror=null;"
      />
    </div>
    <div class="p-6">
      <h3 class="text-xl font-semibold mb-2">T-shirt Tournée</h3>
      <p class="text-gray-700 mb-4">T-shirt officiel de la tournée 2023</p>
      <div class="flex justify-between items-center">
        <span class="text-xl font-bold">{products[1].price.toFixed(2)} $</span>
        <button
          class="snipcart-add-item bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded-lg transition"
          data-item-id={products[1].id}
          data-item-name={products[1].name}
          data-item-price={products[1].price}
          data-item-url={siteUrl || window.location.origin}
          data-item-quantity="1"
          data-item-image={products[1].image}
        >
          Ajouter au panier
        </button>
      </div>
    </div>
  </div>

  <!-- Tote Bag -->
  <div class="border rounded-lg overflow-hidden shadow-lg">
    <div class="h-64 bg-gray-200 flex items-center justify-center">
      <img 
        src="/images/totebag.jpg" 
        alt="Tote Bag"
        class="object-cover h-full w-full"
        onerror="this.src='/images/placeholder.jpg'; this.onerror=null;"
      />
    </div>
    <div class="p-6">
      <h3 class="text-xl font-semibold mb-2">Tote Bag</h3>
      <p class="text-gray-700 mb-4">Sac en toile avec design exclusif</p>
      <div class="flex justify-between items-center">
        <span class="text-xl font-bold">{products[2].price.toFixed(2)} $</span>
        <button
          class="snipcart-add-item bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded-lg transition"
          data-item-id={products[2].id}
          data-item-name={products[2].name}
          data-item-price={products[2].price}
          data-item-url={siteUrl || window.location.origin}
          data-item-quantity="1"
          data-item-image={products[2].image}
        >
          Ajouter au panier
        </button>
      </div>
    </div>
  </div>

  <!-- Poster dédicacé -->
  <div class="border rounded-lg overflow-hidden shadow-lg">
    <div class="h-64 bg-gray-200 flex items-center justify-center">
      <img 
        src="/images/poster.jpg" 
        alt="Poster dédicacé"
        class="object-cover h-full w-full"
        onerror="this.src='/images/placeholder.jpg'; this.onerror=null;"
      />
    </div>
    <div class="p-6">
      <h3 class="text-xl font-semibold mb-2">Poster dédicacé</h3>
      <p class="text-gray-700 mb-4">Poster A3 avec signature authentique</p>
      <div class="flex justify-between items-center">
        <span class="text-xl font-bold">{products[3].price.toFixed(2)} $</span>
        <button
          class="snipcart-add-item bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded-lg transition"
          data-item-id={products[3].id}
          data-item-name={products[3].name}
          data-item-price={products[3].price}
          data-item-url={siteUrl || window.location.origin}
          data-item-quantity="1"
          data-item-image={products[3].image}
        >
          Ajouter au panier
        </button>
      </div>
    </div>
  </div>
</div> 