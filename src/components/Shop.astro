---
// Simulez des données de produits - vous pourriez les remplacer par des données réelles plus tard
const products = [
  {
    id: "album-premier",
    name: "Premier Album",
    price: 15.99,
    description: "Album physique avec livret de paroles",
    image: "/images/album-cover.jpg"
  },
  {
    id: "t-shirt-tour",
    name: "T-shirt Tournée",
    price: 24.99,
    description: "T-shirt officiel de la tournée 2023",
    image: "/images/tshirt.jpg"
  },
  {
    id: "tote-bag",
    name: "Tote Bag",
    price: 12.99,
    description: "Sac en toile avec design exclusif",
    image: "/images/totebag.jpg"
  },
  {
    id: "poster-signature",
    name: "Poster dédicacé",
    price: 19.99,
    description: "Poster A3 avec signature authentique",
    image: "/images/poster.jpg"
  }
];
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
  {products.map(product => (
    <div class="border rounded-lg overflow-hidden shadow-lg">
      <div class="h-64 bg-gray-200 flex items-center justify-center">
        <img 
          src={product.image} 
          alt={product.name}
          class="object-cover h-full w-full"
          onerror="this.src='/images/placeholder.jpg'; this.onerror=null;"
        />
      </div>
      <div class="p-6">
        <h3 class="text-xl font-semibold mb-2">{product.name}</h3>
        <p class="text-gray-700 mb-4">{product.description}</p>
        <div class="flex justify-between items-center">
          <span class="text-xl font-bold">{product.price.toFixed(2)} €</span>
          <button
            class="snipcart-add-item bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded-lg transition"
            data-item-id={product.id}
            data-item-name={product.name}
            data-item-price={product.price}
            data-item-url={Astro.site ? new URL('/boutique', Astro.site).href : '/boutique'}
            data-item-description={product.description}
            data-item-image={product.image}
          >
            Ajouter au panier
          </button>
        </div>
      </div>
    </div>
  ))}
</div> 