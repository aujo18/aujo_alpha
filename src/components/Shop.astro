---
// Accepter siteUrl en tant que propriété
const { siteUrl } = Astro.props;
const products = [
  {
    id: "album-premier",
    name: "Premier Album",
    price: 15.99,
    description: "Album physique avec livret de paroles",
    image: "/images/album-cover.jpg"
  },
  {
    id: "t-shirt-tour",
    name: "T-shirt Tournée",
    price: 24.99,
    description: "T-shirt officiel de la tournée 2023",
    image: "/images/tshirt.jpg"
  },
  {
    id: "tote-bag",
    name: "Tote Bag",
    price: 12.99,
    description: "Sac en toile avec design exclusif",
    image: "/images/totebag.jpg"
  },
  {
    id: "poster-signature",
    name: "Poster dédicacé",
    price: 19.99,
    description: "Poster A3 avec signature authentique",
    image: "/images/poster.jpg"
  }
];

// Configuration de base
const baseUrl = import.meta.env.PROD 
  ? "https://votredomaine.com/boutique" 
  : "http://localhost:3000/boutique";
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
  <!-- Premier Album (très simplifié) -->
  <div class="border rounded-lg overflow-hidden shadow-lg">
    <div class="h-64 bg-gray-200 flex items-center justify-center">
      <img src="/images/album-cover.jpg" alt="Premier Album" class="object-cover h-full w-full" />
    </div>
    <div class="p-6">
      <h3 class="text-xl font-semibold mb-2">Premier Album</h3>
      <p class="text-gray-700 mb-4">Album physique avec livret de paroles</p>
      <div class="flex justify-between items-center">
        <span class="text-xl font-bold">15.99 €</span>
        <button
          class="snipcart-add-item bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded-lg"
          data-item-id="album-premier"
          data-item-name="Premier Album"
          data-item-price="15.99"
          data-item-url={siteUrl || window.location.origin}>
          Ajouter au panier
        </button>
      </div>
    </div>
  </div>

  <!-- T-shirt Tournée -->
  <div class="border rounded-lg overflow-hidden shadow-lg">
    <div class="h-64 bg-gray-200 flex items-center justify-center">
      <img 
        src="/images/tshirt.jpg" 
        alt="T-shirt Tournée"
        class="object-cover h-full w-full"
        onerror="this.src='/images/placeholder.jpg'; this.onerror=null;"
      />
    </div>
    <div class="p-6">
      <h3 class="text-xl font-semibold mb-2">T-shirt Tournée</h3>
      <p class="text-gray-700 mb-4">T-shirt officiel de la tournée 2023</p>
      <div class="flex justify-between items-center">
        <span class="text-xl font-bold">24.99 €</span>
        <button
          class="snipcart-add-item bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded-lg transition"
          data-item-id="t-shirt-tour"
          data-item-name="T-shirt Tournée"
          data-item-price="24.99"
          data-item-url={siteUrl || window.location.origin}
          data-item-quantity="1"
          data-item-image="/images/tshirt.jpg"
        >
          Ajouter au panier
        </button>
      </div>
    </div>
  </div>

  <!-- Tote Bag -->
  <div class="border rounded-lg overflow-hidden shadow-lg">
    <div class="h-64 bg-gray-200 flex items-center justify-center">
      <img 
        src="/images/totebag.jpg" 
        alt="Tote Bag"
        class="object-cover h-full w-full"
        onerror="this.src='/images/placeholder.jpg'; this.onerror=null;"
      />
    </div>
    <div class="p-6">
      <h3 class="text-xl font-semibold mb-2">Tote Bag</h3>
      <p class="text-gray-700 mb-4">Sac en toile avec design exclusif</p>
      <div class="flex justify-between items-center">
        <span class="text-xl font-bold">12.99 €</span>
        <button
          class="snipcart-add-item bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded-lg transition"
          data-item-id="tote-bag"
          data-item-name="Tote Bag"
          data-item-price="12.99"
          data-item-url={siteUrl || window.location.origin}
          data-item-quantity="1"
          data-item-image="/images/totebag.jpg"
        >
          Ajouter au panier
        </button>
      </div>
    </div>
  </div>

  <!-- Poster dédicacé -->
  <div class="border rounded-lg overflow-hidden shadow-lg">
    <div class="h-64 bg-gray-200 flex items-center justify-center">
      <img 
        src="/images/poster.jpg" 
        alt="Poster dédicacé"
        class="object-cover h-full w-full"
        onerror="this.src='/images/placeholder.jpg'; this.onerror=null;"
      />
    </div>
    <div class="p-6">
      <h3 class="text-xl font-semibold mb-2">Poster dédicacé</h3>
      <p class="text-gray-700 mb-4">Poster A3 avec signature authentique</p>
      <div class="flex justify-between items-center">
        <span class="text-xl font-bold">19.99 €</span>
        <button
          class="snipcart-add-item bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded-lg transition"
          data-item-id="poster-signature"
          data-item-name="Poster dédicacé"
          data-item-price="19.99"
          data-item-url={siteUrl || window.location.origin}
          data-item-quantity="1"
          data-item-image="/images/poster.jpg"
        >
          Ajouter au panier
        </button>
      </div>
    </div>
  </div>
</div> 